@model Movie

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Подробности о фильме "@Model.Name"</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>

    <div class="modal-body">
        <form id="movieForm">
            <div class="form-horizontal">
                <input asp-for="Id" hidden="true" />
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><br />
                    <input asp-for="Name" class="form-control" readonly="true" />
                </div>

                <div class="form-group">
                    <label asp-for="ProductionYear" class="control-label"></label><br />
                    <input asp-for="ProductionYear" class="form-control" readonly="true" />
                </div>  

                <div class="form-group">
                    <label asp-for="Director" class="control-label"></label><br />
                    <input asp-for="Director" class="form-control" readonly="true" />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label><br />
                    <textarea asp-for="Description" class="form-control" readonly="true" ></textarea>
                </div>

                @if (Model.Banner != null)
                {
                    <div class="form-group">
                        <img width="250px" height="300px" src="data:image/jpg;base64,@Convert.ToBase64String(@Model.Banner)" asp-append-version="true" />
                    </div>  
                }
                else
                {
                    <div class="form-group">
                        <img style='width: 250px; height: 300px;' src="~/content/no_poster.png" />
                    </div>  
                }                                 
            </div>
        </form>
    </div>    
    
    <div class="modal-footer">
        <button class="btn btn-secondary btn-sm" data-dismiss="modal"><i class="fa fa-times"></i> Закрыть </button>    
    </div>
</div>